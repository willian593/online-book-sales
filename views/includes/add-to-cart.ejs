<!-- componente boton add to cart -->
<% if (isAuthenticated) { %>
<form action="/cart" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <button class="btn" type="submit">Add to Cart</button>
  <input type="hidden" name="id" id="id" value="<%= product._id %>" />
</form>
<% } %>
